<%- include('../../components/header.ejs') %>
    <div class="container">
        <div class="row mt-3">
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h3>Personas</h3>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Apellido</th>
                                    <th>Edad</th>
                                    <th>Ciudad</th>
                                    <th>Fecha de Nacimiento</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                <% personas.forEach(persona=> { %>
                                    <tr>
                                        <td>
                                            <img src="/images/profile/<%= persona.id %>.jpg" alt="Foto de perfil"
                                                width="50" height="50" />
                                        </td>
                                        <td>
                                            <%=persona.id%>
                                        </td>
                                        <td>
                                            <%= persona.nombre %>
                                        </td>
                                        <td>
                                            <%= persona.apellido %>
                                        </td>
                                        <td>
                                            <%= persona.edad %>
                                        </td>
                                        <td>
                                            <%= persona.ciudad %>
                                        </td>
                                        <td>
                                            <%= persona.fechaNacimiento %>
                                        </td>
                                        <td>
                                            <a href="/personas/<%= persona.id %>" class="btn btn-success">Editar</a>
                                        </td>
                                        <td>
                                            <a href="/personas/<%= persona.id %>/contactos" class="btn btn-primary">Ver
                                                contactos</a>
                                        </td>
                                        <td>
                                            <a href="/personas/<%= persona.id %>/perfil"
                                                class="btn btn-outline-primary">Foto de perfil</a>
                                        </td>
                                        <td>
                                            <form method="post" action="/personas/<%=persona.id%>/delete"
                                                onsubmit="return confirm('¿Está seguro de que desea eliminar esta persona?');">
                                                <button type="submit" class="btn btn-danger">Eliminar</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../components/footer.ejs') %>